{{> product}}
{{#if products.length}}
    <table class="table table-hover table-dark mt-5">
        {{#each products}}
            <thead>
                <tr>
                    <th scope="col">
                        Nombre del producto
                    </th>
                    <th scope="row">
                        Precio
                    </th>
                    <th scope="row">
                        Imagen
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        products.title 
                    </td>
                    <td>
                        products.price 
                    </td>
                    <td>
                        products.thumbnail 
                    </td>
                </tr>
            </tbody>
        {{/each}}
    </table>
{{/if}}
{{#else}} 
        <h1 class="mt-5" style="color: red">No hay productos cargados</h1>
{{/else}}